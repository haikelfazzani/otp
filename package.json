{
  "name": "one-time-pass",
  "description": "Zero dependencies Node/Deno/Bun/Browser TOTP and HOTP generator based on RFC 6238 and RFC 4226",
  "version": "2.0.7",
  "author": "Haikel Fazzani",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "browser": "./dist/index.umd.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev": "vite build --minify false",
    "build": "vite build",
    "clean": "rm -rf dist",
    "test:helpers": "jest tests/helpers.test.ts",
    "test:validate": "jest tests/validate.test.ts",
    "test:main": "jest tests/index.test.ts",
    "test": "npm run test:main && npm run test:validate && npm run test:helpers",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "dts-bundle-generator": "^9.5.1",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "files": [
    "dist"
  ],
  "license": "GPL-3.0-only",
  "keywords": [
    "Time-Based OTP",
    "Counter-Based OTP",
    "one time password",
    "totp",
    "hotp",
    "otp",
    "2fa",
    "Hmac",
    "Time Window Tolerance"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haikelfazzani/otp.git"
  },
  "bugs": "https://github.com/haikelfazzani/otp/issues",
  "homepage": "https://github.com/haikelfazzani/otp#readme"
}
